<div class="d-flex justify-content-center">
  <div class="card" style="width: 50%; height: 50%;">
    <div class="card-body" style="text-align: center; ">
      <form action="/main/posts/add" method="post">
        <label for="title">Title:</label>
        <input type="text" name="title" class="form-control">
        <label for="GitHub">GitHub:</label>
        <input type="text" name="github" class="form-control">
        <label for="postslug">Post Slug:</label>
        <input type="text" name="postslug" class="form-control">
        <label for="category">Categories:</label><br>
        <select name="categories">
          {{#each categories}}
            <option value="{{_id}}">
              {{nome}}
            </option>
          {{else}}
          {{/each}}
        </select><br>
        <label for="desc">Description: </label>
        <input type="text" name="desc" class="form-control">
        <button type="submit" name="button" class="btn btn-success">Enviar</button>
      </form>
    </div>
  </div>
</div>
